{
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "quoteProps": "as-needed",
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "useTabs": false,
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.json", "*.module.ts", "*.interface.ts", "*.*css"],
      "options": {
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "useTabs": false,
        "tabWidth": 4
      }
    }
  ]
}
